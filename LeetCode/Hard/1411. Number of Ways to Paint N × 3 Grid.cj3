class Solution
{
    
    func
    numOfWays
    (
        n: Int64
    )
    : Int64
    {
        const MOD = 1000000007
        var t1 = 6
        var t2 = 6
        
        
        for
        (
            i
            in
            1..n
        )
        {
            let t3 = t1
            t1 = ( ( t1 * 2 ) + ( t2 * 2 ) ) % MOD
            t2 = ( ( t3 * 2 ) + ( t2 * 3 ) ) % MOD
        }
        
        
        ( t1 + t2 ) % MOD
    }
    
}
